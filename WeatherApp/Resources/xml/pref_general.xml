<?xml version="1.0" encoding="UTF-8" ?>
<PreferenceScreen
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:custom="http://schemas.android.com/apk/res-auto"
android:layout_width ="match_parent"
android:layout_height="match_parent"
>

<weatherapp.customviews.LocationEditTextPreference
android:title="@string/pref_location_label"
android:key = "@string/pref_location_key"
android:defaultValue="@string/pref_location_default"
android:summary="@string/pref_location_summary"
android:inputType="text"
android:singleLine="true"
custom:MinLength="3"/>

<ListPreference
android:title="@string/pref_temp_label"
android:dialogTitle="@string/pref_tempDialog_label"
android:key = "@string/pref_temp_key"
android:entries="@array/pref_temp_entries"
android:entryValues="@array/pref_temp_values"
android:summary="@string/pref_temp_summary"
android:defaultValue="@string/pref_temp_default"/>

 <CheckBoxPreference
 android:title="@string/pref_enable_notifications_label"
 android:key="@string/pref_enable_notifications_key"
 android:summaryOff="@string/pref_enable_notifications_false"
 android:summaryOn="@string/pref_enable_notifications_true"
 android:defaultValue="@string/pref_enable_notifications_default" />

  <ListPreference
android:title="@string/pref_art_pack_label"
android:key = "@string/pref_art_pack_key"
android:entries="@array/pref_art_pack_options"
android:entryValues="@array/pref_art_pack_values"
android:defaultValue="@string/pref_art_pack_sunshine"/>
</PreferenceScreen>


